<launch>
    <arg name="veh" doc="Name of vehicle. ex: megaman"/>
    <arg name="param_file_name" default="default" doc="Specify a param file. ex: megaman"/>
    <arg name="pkg_name" value="optical_flow"/>
    <arg name="node_name" default="optical_flow_node"/>

    <!-- PubSub -->
    <remap from="optical_flow_node/image" to="camera_node/image/compressed" />
    <remap from="optical_flow_node/camera_info" to="camera_node/camera_info" />
    <remap from="optical_flow_node/range" to="sensor/range" />

    <!-- Set the ROS log level to DEBUG -->
    <rosparam>
        /rosout_disable_topics_generation: False
        /rosout_logger_level: DEBUG
    </rosparam>

    <group ns="$(arg veh)">
        <!-- Node and param -->
        <node name="optical_flow_node" pkg="$(arg pkg_name)" type="$(arg node_name).py" output="screen">
            <!-- Params -->
            <rosparam command="load" file="$(find optical_flow)/config/$(arg node_name)/$(arg param_file_name).yaml"/>
        </node>
        <test test-name="test_optical_flow" pkg="optical_flow" type="test_optical_flow_integration.py" />
    </group>
</launch>
