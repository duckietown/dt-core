<launch>
    <arg name="veh" doc="Name of vehicle. ex megaman"/>
    <arg name="param_file_name" default="default" doc="Specify a param file. ex:megaman"/>

    <arg name="pkg_name" value="rigid_transform"/>
    <arg name="node_name" value="rigid_transform_node"/>

    <group ns="$(arg veh)">
        <remap from="$(arg node_name)/image/compressed" to="camera_node/image/compressed"/>
        <remap from="$(arg node_name)/range" to="bottom_tof_driver_node/range"/>
        <node pkg="$(arg pkg_name)" type="$(arg node_name).py" name="$(arg node_name)" output='screen'>
            <!-- TODO: remap the topics to the appropriate ones -->
            <rosparam command="load" file="$(find rigid_transform)/config/$(arg node_name)/$(arg param_file_name).yaml"/>
        </node>
    </group>
</launch>
