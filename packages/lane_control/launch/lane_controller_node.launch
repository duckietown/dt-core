<launch>
    <arg name="veh"/>
    <arg name="param_file_name" default="default" doc="Specify a param file. ex:megaman"/>
    <arg name="param_file_name_wheels_driver_node" default="default"
         doc="Specify a param file. ex:megaman"/>
    <arg name="pkg_name" default="lane_control" doc="name of the package"/>
    <arg name="node_name" default="lane_controller_node" doc="name of the node"/>

	<arg name="traffic_mode" doc="Left/Right-hand traffic"/>

	<group ns="$(arg veh)">
        <node pkg="$(arg pkg_name)" type="$(arg node_name).py" name="$(arg node_name)"
              output="screen">
			<param name="traffic_mode" value="$(arg traffic_mode)"/>
			<rosparam command="load"
                      file="$(find lane_control)/config/$(arg node_name)/$(arg param_file_name).yaml"/>
        </node>
    </group>

</launch>
