<launch>
    <arg name="veh" doc="Name of vehicle. ex: megaman"/>
    <arg name="pkg_name" value="obstacle_detection"/>
    <arg name="param_file_name" default="default" doc="Specify a param file. ex:megaman"/>
    <arg name="node_name" default="obstacle_detection_node"/>

    <group ns="$(arg veh)">
        <node name="obstacle_detection_node" pkg="$(arg pkg_name)" type="$(arg node_name).py" output="screen" >
			<rosparam command="load" file="$(find obstacle_detection)/config/$(arg node_name)/$(arg param_file_name).yaml"/>
		</node>
    </group>

</launch>
